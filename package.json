{
  "name": "test-tube",
  "version": "0.0.0",
  "description": "Test React components from the point of view of a user",
  "keywords": [
    "react",
    "test"
  ],
  "homepage": "https://github.com/vinsonchuong/test-tube",
  "bugs": "https://github.com/vinsonchuong/test-tube/issues",
  "license": "MIT",
  "author": "Vinson Chuong <vinsonchuong@gmail.com>",
  "repository": "vinsonchuong/test-tube",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "xo && ava",
    "release": "semantic-release"
  },
  "packageManager": "yarn@4.0.2",
  "dependencies": {
    "js-beautify": "^1.14.11",
    "jsdom": "^26.0.0",
    "jsdom-global": "^3.0.2",
    "ms": "^2.1.3"
  },
  "peerDependencies": {
    "react": ">= 18.0.0",
    "react-dom": ">= 18.0.0"
  },
  "devDependencies": {
    "ava": "^6.0.0",
    "dynamic-script": "^1.0.3",
    "get-port": "^7.0.0",
    "htm": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.0.1",
    "semantic-release": "^24.0.0",
    "testdouble": "^3.20.1",
    "xo": "^0.58.0"
  },
  "ava": {
    "verbose": "true"
  },
  "xo": {
    "prettier": true,
    "space": 2,
    "semicolon": false,
    "rules": {
      "import/no-anonymous-default-export": "off",
      "import/no-unassigned-import": "off",
      "n/file-extension-in-import": "off",
      "node/file-extension-in-import": "off"
    },
    "globals": [
      "window",
      "document"
    ]
  }
}
